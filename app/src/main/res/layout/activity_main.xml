<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:shrinkColumns="*">

    <TableRow android:id="@+id/tableRow0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvAssistiveMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textColor="#FFFFFF"

            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"

            android:gravity="center_vertical|center_horizontal"
            android:text="Assistive Mode:"
            android:textSize="20dp" />

        <ToggleButton
            android:id="@+id/btAssistiveMode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:text="ToggleButton" />


    </TableRow>

    <TableRow android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvConnectedDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textColor="#FFFFFF"

            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"

            android:gravity="center_vertical|center_horizontal"
            android:text="Connected Device:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvConnectedDeviceName"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"

            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:textSize="16dp"

            android:gravity="center_vertical|center_horizontal"
            android:text="None yet!" />


    </TableRow>

    <TableRow android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivLuggage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"


            android:src="@drawable/luggage_marvel" />

        <LinearLayout
            android:id="@+id/llMetrics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMetrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner"


                android:paddingBottom="2dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="2dp"
                android:text="@string/metrics"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvSpeedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:text="Current Speed:"
                android:textColor="#FFFFFF"

                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvSpeedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:adjustViewBounds="true"
                android:textColor="#FFFFFF"

                android:gravity="center_vertical|center"
                android:text="0 MPH"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvAvgSpeedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_vertical|center"
                android:textColor="#FFFFFF"

                android:text="Average Speed:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvAvgSpeedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:adjustViewBounds="true"
                android:textColor="#FFFFFF"

                android:gravity="center_vertical|center"
                android:text="0 MPH"
                android:textSize="20dp" />
        </LinearLayout>


    </TableRow>

    <TableRow android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvStairs"
            android:layout_width="0dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:text="Stairs" />

        <TextView
            android:id="@+id/tvEscalator"
            android:textColor="#FFFFFF"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Escalator" />

        <TextView
            android:id="@+id/tvSidewalk"
            android:textColor="#FFFFFF"

            android:layout_width="0dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Mov. Sidewalk" />


    </TableRow>

    <TableRow android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ToggleButton
            android:id="@+id/btStairs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@drawable/button_border"

            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/btEscalator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:background="@drawable/button_border"

            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/btSidewalk"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:background="@drawable/button_border"

            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="ToggleButton" />
        <!--  android:layout_columnWeight="1"
          android:layout_rowWeight="1" -->


    </TableRow>

    <TableRow android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btSettings"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center"

            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"

            android:background="@drawable/button_border"
            android:onClick="launchSettings"
            android:text="Settings" />
    </TableRow>






</TableLayout>